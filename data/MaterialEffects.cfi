	bool NuclearInteraction = true
# The files of nuclear interactions to be read (ordered by increasing energies)
		untracked vstring fileNames = {
			"NuclearInteractions_1GeV.root",
			"NuclearInteractions_2GeV.root",
			"NuclearInteractions_3GeV.root",
			"NuclearInteractions_5GeV.root",
